<%- include('partials/header') -%>
<div class="container">
    <div class="row" style="margin-bottom: 30px;">
        <div class="col-sm">
            <div class="card shadow-sm" style="width: 100%; height:100%; text-align: center;">
                <div class="card-body">
                  <h4 class="card-title">CONFIRMED CASES</h4>
                  <div class="row">
                      <div class="col-sm">
                          <h1 class="text-primary"><%= WorldStats.confirmed %></h1>
                          <p>96% of the total cases in mild care</p>
                      </div>
                  </div>  
                </div>
              </div>
        </div> 
                
        <div class="col-sm">
            <div class="card shadow-sm" style="width: 100%; height:100%; text-align: center;">
                <div class="card-body">
                  <h4 class="card-title">RECOVERED CASES</h4>
                  <div class="row">
                    <div class="col-sm">
                        <h1 class="text-success" style="text-align: center;"><%= WorldStats.recovered %></h1>
                        <p><%= parseFloat((WorldStats.recovered/WorldStats.confirmed)*100).toFixed(2) %>% of the total cases recovered</p>
                    </div>
                </div>  
                </div>
              </div>
        </div>
    
        <div class="col-sm">
            <div class="card shadow-sm" style="width: 100%; height:100%; text-align: center;">
                <div class="card-body">
                  <h4 class="card-title">DEATHS</h4>
                  <div class="row">
                    <div class="col-sm">
                        <h1 class="text-danger" style="text-align: center;"><%= WorldStats.deaths %></h1>
                        <p><%= parseFloat((WorldStats.deaths/WorldStats.confirmed)*100).toFixed(2) %>% of the total cases are dead</p>
                    </div>
                </div>  
                </div>
              </div>
        </div>
    </div>
    <div class="row" style="margin: 0;padding: 0;">
            <div class="img-thumbnail shadow-sm" id="world_div" style="width: 100%; height: 100%;"></div>
    </div>
</div>
<div class="container">
    <h1 style="margin-bottom: 20px;">Coronavirus Outbreak in India</h1>
<div class="row" style="margin-bottom: 30px;">
        <div class="col-sm">
        <div class="card shadow-sm" style="width: 100%;height: 100%; text-align: center;">
            <div class="card-body">
              <h4 class="card-title">CONFIRMED CASES</h4>
              <div class="row">
                <div class="col-sm">
                    <h1 class="text-primary" style="text-align: center;"><%= IndiaStats.confirmed %></h1>
                    <p>95% of the total cases in mild care</p>
                </div>
            </div>  
            </div>
          </div>
    </div>
    <div class="col-sm">
        <div class="card shadow-sm" style="width: 100%;height: 100%; text-align: center;">
            <div class="card-body">
              <h4 class="card-title">RECOVERED CASES</h4>
              <div class="row">
                <div class="col-sm">
                    <h1 class="text-success" style="text-align: center;"><%= IndiaStats.recovered %></h1>
                    <p><%= parseFloat((IndiaStats.recovered/IndiaStats.confirmed)*100).toFixed(2) %>% of the total cases recovered</p>
                </div>
            </div>  
            </div>
          </div>
    </div>
    <div class="col-sm">
        <div class="card shadow-sm" style="width: 100%;height: 100%; text-align: center;">
            <div class="card-body">
              <h4 class="card-title">DEATHS</h4>
              <div class="row">
                <div class="col-sm">
                    <h1 class="text-danger" style="text-align: center;"><%= IndiaStats.deaths %></h1>
                    <p><%= parseFloat((IndiaStats.deaths/IndiaStats.confirmed)*100).toFixed(2) %>% of the total cases are dead</p>
                </div>
            </div>  
            </div>
          </div>
    </div>
    
</div>
<div class="row" style="margin: 0;padding: 0;">
    <div class="img-thumbnail shadow-sm" id="india_div" style="width: 100%; height: 100%;"></div>
</div>
<div class="row">
    <div class="col-6">
        <div class="img-thumbnail shadow-sm" id="donutchart_one" style="width: 100%; height: 300px;"></div>
    </div>
    <div class="col-6">
        <div class="img-thumbnail shadow-sm" id="donutchart_two" style="width: 100%; height: 300px;"></div>
    </div>
</div>
</div>


